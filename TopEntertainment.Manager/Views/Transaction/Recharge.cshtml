@model RechargeMD

<div>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Transaction" asp-action="Index">轉換紀錄</a></li>
            <li class="breadcrumb-item active" aria-current="page">充值</li>
        </ol>
    </nav>
</div>

<div>
    <form asp-controller="Transaction" asp-action="Recharge" method="post">
        <input asp-for="MemberId" />

        <div class="form-group row">
            <label class="col-2 col-form-label" asp-for="MemberName"></label>
            <div class="col-10">
                <input class="form-control" asp-for="MemberName" readonly />
                <span class="text-danger" asp-validation-for="MemberName"></span>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-2 col-form-label" asp-for="Integration"></label>
            <div class="col-10">
                <input class="form-control" asp-for="Integration" readonly />
                <span class="text-danger" asp-validation-for="Integration"></span>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-2 col-form-label" asp-for="DealIntegration"></label>
            <div class="col-10">
                <input class="form-control" asp-for="DealIntegration" />
                <span class="text-danger" asp-validation-for="DealIntegration"></span>
            </div>
        </div>

        <div class="form-group row justify-content-center">
            <span class="text-danger">@ViewBag.ErrorMessage</span>
        </div>

        <div class="form-group row justify-content-center">
            <button class="btn btn-primary" type="submit">送出</button>
        </div>
    </form>
</div>

