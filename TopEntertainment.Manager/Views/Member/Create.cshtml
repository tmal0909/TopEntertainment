@model MemberMD

<div>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Member" asp-action="Index">會員管理</a></li>
            <li class="breadcrumb-item active" aria-current="page">新增</li>
        </ol>
    </nav>
</div>

<div>
    <form asp-controller="Member" asp-action="Create" method="post">
        <div class="form-group row">
            <label class="col-2 col-form-label" asp-for="Account"></label>
            <div class="col-10">
                <input class="form-control" asp-for="Account" />
                <span class="text-danger" asp-validation-for="Account"></span>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-2 col-form-label" asp-for="Password"></label>
            <div class="col-10">
                <input class="form-control" asp-for="Password" />
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-2 col-form-label" asp-for="Identity"></label>
            <div class="col-10">
                <input class="form-control" asp-for="Identity" />
                <span class="text-danger" asp-validation-for="Identity"></span>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-2 col-form-label" asp-for="Name"></label>
            <div class="col-10">
                <input class="form-control" asp-for="Name" />
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-2 col-form-label" asp-for="Birthday"></label>
            <div class="col-10">
                <input class="form-control" asp-for="Birthday" />
                <span class="text-danger" asp-validation-for="Birthday"></span>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-2 col-form-label" asp-for="Phone"></label>
            <div class="col-10">
                <input class="form-control" asp-for="Phone" />
                <span class="text-danger" asp-validation-for="Phone"></span>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-2 col-form-label" asp-for="Address"></label>
            <div class="col-10">
                <input class="form-control" asp-for="Address" />
                <span class="text-danger" asp-validation-for="Address"></span>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-2 col-form-label" asp-for="Status"></label>
            <div class="col-10">
                <select class="form-control" asp-for="Status" asp-items="Model.StatusOptions"></select>
                <span class="text-danger" asp-validation-for="Status"></span>
            </div>
        </div>

        <div class="form-group row justify-content-center">
            <span class="text-danger">@ViewBag.ErrorMessage</span>
        </div>

        <div class="form-group row justify-content-center">
            <button class="btn btn-primary" type="submit">送出</button>
        </div>
    </form>
</div>

@section Scripts{
    <script>
        initDatePicker($('#Birthday'));
    </script>
}