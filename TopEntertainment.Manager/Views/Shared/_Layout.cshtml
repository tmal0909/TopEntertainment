<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>TopEntertainment</title>

    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap-datepicker/css/bootstrap.datepicker.min.css" />
    <link rel="stylesheet" href="~/lib/jquery-datatable/css/jquery.datatables.min.css" />
    <link rel="stylesheet" href="~/lib/icon/css/icon.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <script src="~/lib/jquery/js/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/js/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/js/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/jquery-datatable/js/jquery.datatables.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/bootstrap-datepicker/js/bootstrap.datepicker.min.js"></script>
    <script src="~/lib/bootstrap-datepicker/js/bootstrap.datepicker.zh-TW.min.js"></script>
    <script src="~/js/util.js"></script>
    <script src="~/js/site.js"></script>

    @RenderSection("Styles", required: false)
</head>
<body>
    <header>
        <img class="header-logo" src="~/images/header-logo.jpg" />
        <span>Top Entertainment</span>
        <a class="float-right" asp-controller="Home" asp-action="Logout">登出</a>
    </header>

    <section class="main-frame">
        <aside>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link btn btn-primary text-left" asp-controller="Administrator" asp-action="Index">管理者管理</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link btn btn-primary text-left" asp-controller="Member" asp-action="Index">會員管理</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link btn btn-primary text-left" asp-controller="Transaction" asp-action="Index">交易紀錄</a>
                </li>
            </ul>

            <hr />

            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link btn btn-primary text-left btn-success" href="#">會員統計圖表</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link btn btn-primary text-left btn-success" href="#">交易統計圖表</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link btn btn-primary text-left btn-success" href="#">兌換商品統計圖表</a>
                </li>
            </ul>

            <hr />

            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link btn btn-primary text-left btn-warning" href="#">最新消息管理</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link btn btn-primary text-left btn-warning" href="#">點數商品管理</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link btn btn-primary text-left btn-warning" href="#">兌換商品管理</a>
                </li>
            </ul>
        </aside>

        <article>
            <div class="container-fluid">
                @RenderBody()
            </div>
        </article>
    </section>

    <footer>&copy; Motivators 2019</footer>

    @RenderSection("Scripts", required: false)
</body>
</html>
